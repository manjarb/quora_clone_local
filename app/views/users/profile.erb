<div class="container">
	<h1 class="padding-bottom-30 border-bottom-grey"><%= current_user.username %></h1>
	<div class="row padding-top-bottom-15">
			<div class="col-md-6 border-right-grey">
				<h3 class="padding-bottom-15 border-bottom-grey">Answers</h3>
				<% answers.each do |answer| %>
					<a href="/question/<%= answer.question_id %>">
						<div class="user-question-list-box alert alert-success margin-top-bottom-15">
							<% if question = Question.find_by(id: answer.question_id) %>
								<h4><%= question.headline %></h4>
							<% end %>
							<p><%= answer.content %></p>
						</div>
					</a>
				<% end %>
			</div>
			<div class="col-md-6">
				<h3 class="padding-bottom-15 border-bottom-grey">Questions</h3>
				<% questions.each do |question| %>
					<a href="/question/<%= question.id %>">
						<div class="user-question-list-box margin-top-bottom-15 alert alert-info">
							<h4><%= question.headline %></h4>
						</div>
					</a>
				<% end %>
			</div>
		</div>	
</div>